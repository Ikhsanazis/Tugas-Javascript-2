//buat program search name yang menerapkan callback function
let names = [
  "abigail",
  "alexandra",
  "alison",
  "amanda",
  "angela",
  "bella",
  "carol",
  "caroline",
  "carolyn",
  "derfe",
  "diana",
  "elizabeth",
];

function callback(array, keyword) {
  if (array.length == 0) {
    console.log(`Masukan data array`); //apabila keyword tidak ditemukan
  } else {
    var array = array.map(String); //mengubah komponen array menjadi string
    var array = array.map((element) => {
      return element.toLowerCase(); //mengubah karakter menjadi hururf kecil
    });
  }
  let newname = [];

  //mencari keyword pada array
  for (i = 0; i < array.length; i++) {
    if (array[i].includes(keyword.toLowerCase())) {
      newname.push(array[i]);
    }
  }
  return newname;
}

function searchName(keyword, array, n, callback) {
  const newarray = callback(array, keyword);

  if (newarray.length > 0 && newarray.length < n) {
    console.log(`hasil yang ditemukan kurang dari ${n}`);
  } else {
    let final = [];

    for (i = 0; i < n; i++) {
      final.push(newarray[i]);
    }
    console.log(final);
  }
}

searchName("an", nama, 3, callback);
